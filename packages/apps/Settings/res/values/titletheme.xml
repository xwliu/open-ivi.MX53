<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="titletheme" parent="@android:style/Theme.Black">
           <item name="android:windowTitleSize">30dp</item>
          <item name="android:windowTitleBackgroundStyle">@style/bg_title_style</item>
          <item name="android:windowTitleStyle">@style/TextAppearance.WindowTitle</item>
      </style>
      <style name="TextAppearance.WindowTitle" parent="@android:style/TextAppearance.WindowTitle">
          <item name="android:textColor">#FFFFFFFF</item>
          <item name="android:textStyle">normal</item>
          <item name="android:paddingLeft">5px</item>
      </style>
      <style name="bg_title_style">
          <item name="android:background">@drawable/setting_bg_title</item>
      </style>
</resources>
